<h2>Server configuration</h2>
<div class="EntryBlock">
  <form action="addServer" method="post">
    <fieldset class="EntryFieldSet">
      <legend>Add server</legend>
      Host:<br><input type="text" name="host"><br>
      Port:<br><input type="text" name="port"><br>
      Username:<br><input type="text" name="username"><br>
      Password:<br><input type="password" name="password"><br>
      Connections:<br><input type="text" name="connections"><br>
      Fillserver:<br><input type="radio" name="fillserver" value="0" "checked=1"> No
                     <input type="radio" name="fillserver" value="1"> Yes
                 <br>
      <p><input type="submit" value="Add Server"></p>
    </fieldset>
  </form>
<!--#for $server in $servers#-->
  <form action="saveServer" method="post">
    <fieldset class="EntryFieldSet">
      <legend>$server</legend>
      Host:<br><input type="text" name="host" value=$servers[$server]['host']><br>
      Port:<br><input type="text" name="port" value=$servers[$server]['port']><br>
      Username:<br><input type="text" name="username" value=$servers[$server]['username']><br>
      Password:<br><input type="password" name="password" value=$servers[$server]['password']><br>
      Connections:<br><input type="text" name="connections" value=$servers[$server]['connections']><br>
      Fillserver:<br><input type="radio" name="fillserver" value="0" <!--#if int($servers[$server]['fillserver']) == 0 then "checked=1" else ""#--> /> No
                     <input type="radio" name="fillserver" value="1" <!--#if int($servers[$server]['fillserver']) != 0 then "checked=1" else ""#--> /> Yes
                 <br>
      <input type="hidden" name="server" value=$server>
      <p><input type="submit" value="Save Changes"></p>
      <p><input type="submit" onclick="this.form.action='delServer'; this.form.submit(); return false;" value="Remove Server"></p>
    </fieldset>
  </form>
<!--#end for#-->
</div>
<div class="footer">
<!--#if $shutdown then "<b>SHUTDOWN</b> - " else ""#--><b>Download Dir:</b> $diskspace1 GB - <b>Complete Dir:</b> $diskspace2 GB - <b>Download speed:</b> $kbpersec KB/s - <b>Queued:</b> $mbleft/$mb MB <!--#if $paused then "- <b>PAUSED</b>" else ""#--><br>
<!--#if int($cache_limit)#-->
<b>$cache_art</b> articles buffered in <b>$cache_size</b> bytes<br>
