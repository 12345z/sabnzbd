<html>
	<head>
		<title>SABnzbd Quickstart Wizard</title>
		<link rel="stylesheet" type="text/css" href="static/style.css"/>
        <link rel="shortcut icon" href="static/images/favicon.ico" />
	</head>
	<body>
	<img id="logo" src="static/images/icon_sab.png" />
	<div id="page">
		<div id="inner">
            <div id="content" class="bigger">
                <div id="rightGreyText">Running SABnzbd+ Version $version</div>
                <br /><h1>SABnzbd Quick-Start Wizard</h1> <h2>&raquo; Step $num</h2><br />
                <hr />
                <div class="align-center">
                #for $step in xrange($steps)#
                   #set $step = $step + 1#
                    <span class="#if $step == $number then 'selected' else 'unselected'#">$step</span> 
                #end for#
                </div>