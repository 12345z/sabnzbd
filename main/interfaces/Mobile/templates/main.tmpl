<!doctype html>
<html>
<head>

    <meta charset="UTF-8" />
    <title>SAB+</title>

    <style type="text/css" media="screen">@import "static/stylesheets/jqtouch.min.css?$version";</style>
    <link rel="stylesheet" type="text/css" href="static/stylesheets/colorschemes/$color_scheme?$version"/>

    <script src="static/javascripts/mobile.js?$version" type="application/x-javascript" charset="utf-8"></script>
	<script type="text/javascript">
		var apikey = "$session";
	</script>

</head>
<body>


    <div id="home">
        <div class="toolbar">
            <h1>SAB+ Mobile</h1>
        </div>
