    <div id="queue" class="plastic">
        <div class="toolbar">
    		<h1>$T('menu-queue')</h1>
    		<a href="#" class="back">$T('button-back')</a>
    	</div>
    	<ul id="queueList"></ul>
        <ul class="individual">
        	<li><a href="#" id="queue_more">$T('Mobile-button-viewmore')</a></li>
        </ul>
    </div>


    <div id="queue_nzb">
        <div class="toolbar">
    		<h1>$T('menu-queue') NZB</h1>
    		<a href="#" class="back">$T('button-back')</a>
    	</div>
        <div>
        	<h2>nzb name</h2>
        	<br/>size
        	<br/>age
        	<br/>eta
        	<br/>percentage
        	<br/>(eventually cat/priority/etc)
        </div>
    </div>

    
    <div id="history" class="plastic">
        <div class="toolbar">
    		<h1>$T('menu-history')</h1>
    		<a href="#" class="back">$T('button-back')</a>
    	</div>
    	<ul id="historyList"></ul>
		<ul class="individual">
        	<li><a href="#" id="history_more">$T('Mobile-button-viewmore')</a></li>
        </ul>
    </div>

    
    <div id="history_nzb">
        <div class="toolbar">
    		<h1>$T('menu-history') NZB</h1>
    		<a href="#" class="back">$T('button-back')</a>
    	</div>
        <div>
        	<h2>nzb name</h2>
        	<br/>((history verbosity))
        	<br/>((history verbosity))
        	<br/>((history verbosity))
        	<br/>((history verbosity))
        </div>
    </div>


    <div id="addnzb">
        <div class="toolbar">
    		<h1>$T('add') NZB</h1>
    		<a href="#" class="back">$T('button-back')</a>
    	</div>
        <form>
            <ul class="edit">
            	<li><input type="text" name="addnzb_url" placeholder="Enter NZB URL" id="addnzb_url" /></li>
            </ul>
	        <ul class="individual">
	        	<li><a href="#" id="addnzb_enqueue">$T('button-add')</a></li>
	        	<li><a href="#" id="addnzb_clear">$T('button-clear')</a></li>
	        </ul>
	        <p style="display:none;">$T('sort-result'): <span id="addnzb_response"></span></p>
        </form>

    </div>
    
    
</body>
</html>
