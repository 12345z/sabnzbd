<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0//EN">
<html>
<head>
	
	<title>SABnzbd+ $version - Queued: $mbleft MB</title>
	<link rel="shortcut icon" type="image/ico" href="../../static/images/plush-default/sabnzbdplus.ico"/>
	
	<script type="text/javascript" src="../../static/javascripts/jquery.js"></script>
	<script type="text/javascript" src="../../static/javascripts/jquery.corner.js"></script>
	
	<link rel="stylesheet" type="text/css" href="../../static/stylesheets/plush-default.css"/>
	<!--#if $color_scheme#-->
	<link rel="stylesheet" type="text/css" href="../../static/stylesheets/colorschemes/$color_scheme"/>
	<!--#end if#-->
	
	<style>
	<!--
		body {background: #ddd;}
		legend {padding:2px;font-weight:bold;color:white;background-color:#333;font-size:150%;}
	-->
	</style>
	
</head>
<body>
	
	<div align="center">
		<a href="../../" style="text-decoration:none; color:black">&laquo; go back <img src="../../static/images/plush-default/sabnzbdplus_logo.png" border="0"/></a>
	</div>
	
	<div id="config_nav">
		<ul>
			<li><a class="config_menu" id="config_nav_connections" href="../../connections">Connections</a></li>
			<li><a class="config_menu" id="config_nav_general" href="../general">General</a></li>
			<li><a class="config_menu" id="config_nav_directories" href="../directories">Directories</a></li>
			<li><a class="config_menu" id="config_nav_switches" href="../switches">Switches</a></li>
			<li><a class="config_menu" id="config_nav_server" href="../server">Servers</a></li>
			<li><a class="config_menu" id="config_nav_categories" href="../categories">Categories</a></li>
			<li><a class="config_menu" id="config_nav_scheduling" href="../scheduling">Scheduling</a></li>
			<li><a class="config_menu" id="config_nav_rss" href="../rss">RSS</a></li>
			<li><a class="config_menu" id="config_nav_email" href="../email">Email</a></li>
			<li><a class="config_menu nav_active" id="config_nav_newzbin" href="../newzbin">Newzbin</a></li>
		</ul>
	</div>
	
	<div id="config_container" class="config_margin">
		<div id="config_content">
			
<!--************************************
			PAGE CONTENT IS BELOW
	************************************ -->
	
			<small>If you have an account at <a href="https://v3.newzbin.com" target="_blakn">v3.newzbin.com</a>, you can enter your account info here; this will unlock extra functionality.</small><br/><br/>
	
			<form action="saveNewzbin" method="post" name="fullform">
			<div class="EntryBlock">
			<fieldset class="EntryFieldSet">
				
				<legend>&raquo; Newzbin Account Info&nbsp;</legend>
				
				<strong style="color:white;background-color:darkgreen;">&nbsp;Optional!&nbsp;</strong><br/><br/>
				
				<strong>Username:</strong><br/>
				<small>Set your Newzbin username here.</small><br/>
				<input type="text" name="username_newzbin" value="$username_newzbin"/>
				
				<br/><br/>
				<strong>Password:</strong><br/>
				<small>Set your Newzbin password here.</small><br/>
				<input type="password" name="password_newzbin" value="$password_newzbin"/>
				
			</fieldset>
			</div>
			
			<div class="EntryBlock">
			<fieldset class="EntryFieldSet">
				
				<legend>Bookmark Processing</legend>
				
				<strong>Auto Fetch Bookmarks:</strong><br/>
				<small>Automatically get jobs from your bookmarks?</small><br/>
				<input type="radio" name="newzbin_bookmarks" value="0" <!--#if $newzbin_bookmarks == 0 then "checked=1" else ""#--> /> No
				<input type="radio" name="newzbin_bookmarks" value="1" <!--#if $newzbin_bookmarks > 0 then "checked=1" else ""#--> /> Yes
				
				<br/>
				<a href="getBookmarks">Get Bookmarks Now</a>
				
				<br/>
				<!--#if $bookmarks_list#-->
				<a href="hideBookmarks">Hide Processed Bookmarks</a>
				<!--#else#-->
				<a href="showBookmarks">Show Processed Bookmarks</a>
				<!--#end if#-->
				
				<br/><br/>
				<strong>Un-bookmark If Download Complete:</strong><br/>
				<small>Remove from bookmark list, when download is complete.</small><br/>
				<input type="radio" name="newzbin_unbookmark" value="0" <!--#if $newzbin_unbookmark == 0 then "checked=1" else ""#--> /> No
				<input type="radio" name="newzbin_unbookmark" value="1" <!--#if $newzbin_unbookmark > 0 then "checked=1" else ""#--> /> Yes
				
				<br/><br/>
				<strong>Checking Interval:</strong><br/>
				<small>In minutes.</small><br/>
				<input type="text" name="bookmark_rate" value="$bookmark_rate"/> (at least 15 min)
				
			</fieldset>
			</div>
			
			<!--#if $bookmarks_list#-->
			<fieldset class="EntryFieldSet">
				
				<legend>Processed bookmarks</legend>
				
				<!--#for $msgid in $bookmarks_list#-->
				<a href="https://v3.newzbin.com/browse/post/$msgid/" target="_blank">$msgid</a>&nbsp;
				<!--#end for#-->
				
			</fieldset>
			<!--#end if#-->
			
			
<!--************************************
			PAGE CONTENT IS ABOVE
	************************************ -->
			
		</div>
	</div>
	
	<div class="left_links config_margin">
		<a id="help" target="_blank" href="$helpuri/Configure+Newzbin">Newzbin Help</a>
	</div>
	
	<div class="right_links">
		<a id="save" onclick="document.fullform.submit();">Save Changes</a>
	</div>
	
	</form>
	
	<script language="javascript">
		\$('.config_menu').corner("round tl bl");
		\$('#config_container').corner("round");
		\$('#help').corner("round");
		\$('#save').corner("round");
	</script>
	
</body>
</html>
