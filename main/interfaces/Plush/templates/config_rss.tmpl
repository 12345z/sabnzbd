<h2>EXPERIMENTAL RSS Configuration</h2>
<!--#if $have_feedparser#-->
<div class="EntryBlock">
  <form action="add_rss_feed" method="get">
    <fieldset class="EntryFieldSet">
    <legend>RSS feed settings</legend>
      <b>RSS-Feed URI:</b><br>
      <input type="text" size="100" name="uri"><br><br>

      <b>Text Filter:</b><br>
      (Basic) text based filter. A single '*' matches everything.
      <br>
      <input type="text" size="100" name="text_filter">
      <br>
      <br>

      <b>Regex Filter:</b><br>
      Regular Expression filter. Overwrites text filter.
      <br>
      <input type="text" size="100" name="re_filter">
      <br>
      <br>

      <b>Match Multiple:</b><br>
      Match this filter more than once?
      <br>
      <input type="radio" name="match_multiple" value="0"> No
      <input type="radio" name="match_multiple" value="1" checked=1> Yes
      <br>
      <br>

      <b>Unpack Opts:</b><br>
      <input type="radio" name="unpack_opts" value="0"> None
      <input type="radio" name="unpack_opts" value="1" checked=1> +Repair
      <input type="radio" name="unpack_opts" value="2"> +Unpack
      <input type="radio" name="unpack_opts" value="3"> +Delete
      <input type="radio" name="unpack_opts" value="4"> Repair+Script
      <input type="radio" name="unpack_opts" value="5"> Unpack+Script
      <input type="radio" name="unpack_opts" value="6"> Delete+Script
      <br>
      <br>

      <input type="submit" value="Add">
    </fieldset>
  </form>
</div>
<br>
<br>
