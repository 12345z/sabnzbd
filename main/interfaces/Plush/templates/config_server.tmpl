<div class="EntryBlock">
  <form action="addServer" method="post">
    <fieldset class="EntryFieldSet">
      <legend>Add server</legend>
      Host:<br><input type="text" size="24" name="host"><br>
      Port:<br><input type="text" size="24" name="port"><br>
      Username:<br><input type="text" size="24" name="username"><br>
      Password:<br><input type="password" size="24" name="password"><br>
      Timeout:<br><input type="text" size="24" name="timeout"><br>
      Connections:<br><input type="text" size="24" name="connections"><br>
      Fillserver:<br><input type="radio" name="fillserver" value="0" "checked=1"> No
                     <input type="radio" name="fillserver" value="1"> Yes
                 <br>
      <p><input type="submit" value="Add Server"></p>
    </fieldset>
  </form>
<!--#for $server in $servers#-->
  <form action="saveServer" method="post">
    <fieldset class="EntryFieldSet">
      <legend>$server</legend>
      Host:<br><input type="text" size="24" name="host" value="$servers[$server]['host']"/><br/>
      Port:<br><input type="text" size="24" name="port" value="$servers[$server]['port']"/><br/>
      Username:<br><input type="text" size="24" name="username" value="$servers[$server]['username']"/><br/>
      Password:<br><input type="password" size="24" name="password" value="$servers[$server]['password']"/><br/>
      Timeout:<br><input type="text" size="24" name="timeout" value="$servers[$server]['timeout']"/><br/>
      Connections:<br><input type="text" size="24" name="connections" value="$servers[$server]['connections']"/><br/>
      Fillserver:<br><input type="radio" name="fillserver" value="0" <!--#if int($servers[$server]['fillserver']) == 0 then "checked=1" else ""#--> /> No
                     <input type="radio" name="fillserver" value="1" <!--#if int($servers[$server]['fillserver']) != 0 then "checked=1" else ""#--> /> Yes
                 <br>
      <input type="hidden" name="server" value="$server"/>
      <p><input type="submit" value="Save Changes"></p>
      <p><input type="submit" onclick="this.form.action='delServer'; this.form.submit(); return false;" value="Remove Server"></p>
    </fieldset>
  </form>
<!--#end for#-->
</div>

