<div id="config_container" class="config_margin">
	<div id="config_content">

<!-- ************************************
	 		PAGE CONTENT IS BELOW
     ************************************ -->

<div class="EntryBlock">
  <form action="addServer" method="post">
    <fieldset class="EntryFieldSet">
      <legend>Add Server</legend>
	<table>
      <tr><td>Host:</td><td><input type="text" size="26" name="host"></td></tr>
      <tr><td>Port:</td><td><input type="text" size="6" name="port"></td></tr>
      <tr><td>Username:</td><td><input type="text" size="26" name="username"></td></tr>
      <tr><td>Password:</td><td><input type="password" size="26" name="password"></td></tr>
      <tr><td>Timeout:</td><td><input type="text" size="6" name="timeout"></td></tr>
      <tr><td>Connections:</td><td><input type="text" size="6" name="connections"></td></tr>
      <tr><td>SSL:</td><td><input type="radio" name="ssl" value="0" "checked=1"> No
                     <input type="radio" name="ssl" value="1"> Yes</td></tr>
      <tr><td>Fillserver:</td><td><input type="radio" name="fillserver" value="0" "checked=1"> No
                     <input type="radio" name="fillserver" value="1"> Yes</td></tr>
	</table>
      <p><input type="submit" value="Add Server"></p>
    </fieldset>
  </form>
<!--#for $server in $servers#-->
  <form action="saveServer" method="post"size="26">
    <fieldset class="EntryFieldSet">
      <legend><!--#if int($servers[$server]['ssl']) != 0 #--><img style="float:left" src="../../static/images/icon_config_encrypted.png" title="Encrypted via SSL"/>&sdot;<!--#end if#-->$server</legend>
	<table>
      <tr><td>Host:</td><td><input type="text" size="26" name="host" value="$servers[$server]['host']"/></td></tr>
      <tr><td>Port:</td><td><input type="text" size="6" name="port" value="$servers[$server]['port']"/></td></tr>
      <tr><td>Username:</td><td><input type="text" size="26" name="username" value="$servers[$server]['username']"/></td></tr>
      <tr><td>Password:</td><td><input type="password" size="26" name="password" value="$servers[$server]['password']"/></td></tr>
      <tr><td>Timeout:</td><td><input type="text" size="6" name="timeout" value="$servers[$server]['timeout']"/></td></tr>
      <tr><td>Connections:</td><td><input type="text" size="6" name="connections" value="$servers[$server]['connections']"/></td></tr>
      <tr><td>SSL:</td><td><input type="radio" name="ssl" value="0" <!--#if int($servers[$server]['ssl']) == 0 then "checked=1" else ""#--> /> No
                     <input type="radio" name="ssl" value="1" <!--#if int($servers[$server]['ssl']) != 0 then "checked=1" else ""#--> /> Yes</td></tr>
      <tr><td>Fillserver:</td><td><input type="radio" name="fillserver" value="0" <!--#if int($servers[$server]['fillserver']) == 0 then "checked=1" else ""#--> /> No
                     <input type="radio" name="fillserver" value="1" <!--#if int($servers[$server]['fillserver']) != 0 then "checked=1" else ""#--> /> Yes</td></tr>
	</table>
      <input type="hidden" name="server" value="$server"/>
      <p>
		<input type="submit" onclick="if(confirm('Are you sure you want to delete $servers[$server]['host']:$servers[$server]['port']?')){this.form.action='delServer'; this.form.submit(); return false;}" value="Remove Server">
		<input type="submit" value="Save Changes">
	  </p>
    </fieldset>
  </form>
<!--#end for#-->
</div>

<!-- ************************************
	 		PAGE CONTENT IS ABOVE
     ************************************ -->
	</div>
</div>

