<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0//EN">
<html>
<head>
	
	<title>SABnzbd+ $version - Queued: $mbleft MB</title>
	<link rel="shortcut icon" type="image/ico" href="../../static/images/plush-default/sabnzbdplus.ico"/>
	
	<script type="text/javascript" src="../../static/javascripts/jquery.js"></script>
	<script type="text/javascript" src="../../static/javascripts/jquery.corner.js"></script>
	
	<link rel="stylesheet" type="text/css" href="../../static/stylesheets/plush-default.css"/>
	<!--#if $color_scheme#-->
	<link rel="stylesheet" type="text/css" href="../../static/stylesheets/colorschemes/$color_scheme"/>
	<!--#end if#-->
	
	<style>
	<!--
		body {background: #ddd;}
	-->
	</style>
	
</head>
<body>
	
	<div align="center">
		<a href="../../" style="text-decoration:none; color:black">&laquo; go back <img src="../../static/images/plush-default/sabnzbdplus_logo.png" border="0"/></a>
	</div>
	
	<div id="config_nav">
		<ul>
			<li><a class="config_menu" id="config_nav_connections" href="../../connections">Connections</a></li>
			<li><a class="config_menu" id="config_nav_general" href="../general">General</a></li>
			<li><a class="config_menu" id="config_nav_directories" href="../directories">Directories</a></li>
			<li><a class="config_menu" id="config_nav_switches" href="../switches">Switches</a></li>
			<li><a class="config_menu" id="config_nav_server" href="../server">Servers</a></li>
			<li><a class="config_menu" id="config_nav_categories" href="../categories">Categories</a></li>
			<li><a class="config_menu" id="config_nav_scheduling" href="../scheduling">Scheduling</a></li>
			<li><a class="config_menu" id="config_nav_rss" href="../rss">RSS</a></li>
			<li><a class="config_menu nav_active" id="config_nav_email" href="../email">Email</a></li>
			<li><a class="config_menu" id="config_nav_newzbin" href="../newzbin">Newzbin</a></li>
		</ul>
	</div>
	
	<div id="config_container" class="config_margin">
		<div id="config_content">
			
<!--************************************
			PAGE CONTENT IS BELOW
	************************************ -->
			
			<form action="saveEmail" method="post" name="fullform">
			<div class="EntryBlock">
			<fieldset class="EntryFieldSet">
				
				<legend>Email Options</legend>
				
				<strong>End-of-job notifications:</strong><br/>
				Send email when job is completed.<br/>
				<input type="radio" name="email_endjob" value="0" <!--#if $email_endjob == 0 then "checked=1" else ""#--> /> No
				<input type="radio" name="email_endjob" value="1" <!--#if $email_endjob > 0 then "checked=1" else ""#--> /> Yes
				
				<br/><br/>
				<strong>Disk full notifications:</strong><br/>
				Send email when disk is full and SABnzbd is paused.<br/>
				<input type="radio" name="email_full" value="0" <!--#if $email_full == 0 then "checked=1" else ""#--> /> No
				<input type="radio" name="email_full" value="1" <!--#if $email_full > 0 then "checked=1" else ""#--> /> Yes
				
			</fieldset>
			</div>
			
			<fieldset class="EntryFieldSet">
				
				<legend>Email Account Settings</legend>
				
				<strong>SMTP server:</strong><br/>
				Set your ISP's server for outgoing email.<br/>
				<input type="text" size="35" name="email_server" value="$email_server"/>
				
				<br/><br/>
				<strong>Email recipient:</strong><br/>
				Email address to send the email to.<br/>
				<input type="text" size="35" name="email_to" value="$email_to"/>
				
				<br/><br/>
				<strong>Email sender:</strong><br/>
				Who should we say sent the email?<br/>
				<input type="text" size="35" name="email_from" value="$email_from"/>
				
				<br/><br/>
				<strong>OPTIONAL: Account name:</strong><br/>
				For authenticated email, account name.<br/>
				<input type="text" size="35" name="email_account" value="$email_account"/>
				
				<br/><br/>
				<strong>OPTIONAL: Account password:</strong><br/>
				For authenticated email, password.<br/>
				<input type="password" size="35" name="email_pwd" value="$email_pwd"/>
				
			</fieldset>
			</div>
			
<!--************************************
			PAGE CONTENT IS ABOVE
	************************************ -->
			
		</div>
	</div>
	
	<div class="left_links config_margin">
		<a id="help" target="_blank" href="$helpuri/Configure+Email">Email Help</a>
	</div>
	
	<div class="right_links">
		<a id="save" onclick="document.fullform.submit();">Save Changes</a>
	</div>
	
	</form>
	
	<script language="javascript">
		\$('.config_menu').corner("round tl bl");
		\$('#config_container').corner("round");
		\$('#help').corner("round");
		\$('#save').corner("round");
	</script>
	
</body>
</html>
