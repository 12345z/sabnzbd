<%
def displayNotices (action):
	notice = action[3:11]
	if notice[:-2] != "Joined" and notice != "Verified" and notice[:-1] != "Deleted" and notice != "Unpacked" and notice != "Scanning" and notice != "Repaired" and notice != "Unzipped" and notice != "No par2 ":
		return '<small class="hvError">&rArr;&nbsp;' + action[3:] + '&nbsp;</small><br/>'
%>

<table class="listingTable" cellspacing="0">
	<thead>
		<tr>
			<th class="first">HISTORY<span><b>$uptime</b><small>&nbsp;Uptime</small></span></th>
			<th></th>
			<th class="last tools">
				<a id="history_purge" title="Clear Out the History Display">Purge</a>&sdot;<a id="history_verbosity"<!--#if $isverbose#--> class="active" title="Toggle Verbosity Off"<!--#else#--> title="Toggle Verbosity On"<!--#end if#-->>&crarr;</a>
			</th>
		</tr>
	</thead>
	<tbody id="historyContent">
		
	<!--#set $odd = False#-->
	<!--#if $lines#-->
	<!--#for $line in $lines #-->
		<!--#set $odd = not $odd#-->
		<tr class="<!--#if $odd#-->alt<!--#end if#--> <!--#if $line.loaded #-->active<!--#end if#-->">
			<td class="first itemTTD">
				$line.added
			</td>
			<td class="itemTitle">
				
				<!--#if $line.loaded #-->
					<span class="history_loading"/>
				<!--#end if#-->
				
				<span>
				<!--#if $line.msgid #-->
					<a href="https://v3.newzbin.com/browse/post/$line.msgid/" target="_blank">$line.filename</a>
				<!--#else#-->
					$line.filename
				<!--#end if#-->
				</span>
				
			</td>
			<td class="last">
				<!--#if $line.stages#-->
					<div>
					<!--#for $stage in $line.stages#-->
						<!--#for $action in $stage.actions#-->
							<span title='<%= action['value'][3:] %> | <%= action['name'].replace("'","&rsquo;") %>'>
<%
if action['name'][:4]=="[DEL":
	pp = 'Del'
else:
	pp = stage['name']
%>
								<b class="history_$pp">&#8203;</b>
								<%=displayNotices(action['value'])%>
							</span>
						<!--#end for#-->
					<!--#end for#-->
					</div>
				<!--#end if#-->
				
			</td>
		</tr>
		<!--#end for#-->
		<!--#end if#-->
		
		
	</tbody>
	<tfoot>
		<tr>
			<td class="first" colspan="2">
				<span><b>$total_bytes</b><small>&nbsp;GB&nbsp;In&nbsp;History</small></span>
			</td>
			<td class="last">
				<span><b>$bytes_beginning</b><small>&nbsp;GB&nbsp;Downloaded</small></span>
			</td>
		</tr>
	</tfoot>
</table>