			<div class="EntryBlock">
			<form action="addSchedule" method="post">
			<fieldset class="EntryFieldSet">
				
				<legend>&raquo;&nbsp;Add&nbsp;Schedule&nbsp;</legend>
<%import time
t = time.localtime()
hour = t[3]
if hour != 23:
    hour += 1
else:
    hour = 0 %>

				<table>
					<tr><td align=right>
						Hour : Minute:
					</td><td>
						<select name="hour">
						<!--#for $i in range(24)#-->
							<option value="$i" <!--#if hour == i then "selected=1" else ""#-->> $i</option>
						<!--#end for#-->
						</select>
						:
						<select name="minute">
						<!--#for $i in range(60)#-->
							<option value="$i">$i
						<!--#end for#-->
						</select>
					</td></tr>
					
					<tr><td align=right>
						Frequency:
					</td><td>
						<select name="dayofweek">
							<option value="*" selected>Daily
							<option value="1">Mondays
							<option value="2">Tuesdays
							<option value="3">Wednesdays
							<option value="4">Thursdays
							<option value="5">Fridays
							<option value="6">Saturdays
							<option value="7">Sundays
						</select>
					</td></tr>
					
					<tr><td align=right>
						Action:
					</td><td>
						<select name="action">
							<option value="resume">resume
							<option value="pause">pause
							<option value="shutdown">shutdown
							<option value="speedlimit">speedlimit
						</select>
					</td></tr>
					
					<tr><td align=right>
						Arguments:
					</td><td>
						<input type="text" size="20" name="arguments" value=""/>
					</td></tr>
					
					<tr><td>
					</td><td>
						<br/><input type="submit" value="&oplus; Add Schedule"/>
					</td></tr>
					
				</table>
				
				
				
			</fieldset>
			</form>
			</div>
			
			<div class="EntryBlock>"
			<fieldset class="EntryFieldSet">
			<legend>&raquo;&nbsp;Current&nbsp;Schedules&nbsp;</legend>
			<!--#set $schednum = 0#-->
			<!--#for $line in $schedlines#-->
			<form action="delSchedule" method="post">
				<!--#set $schednum = $schednum+1#-->
<% 
m, h, day, action = line.split(' ', 3)
if len(m) == 1:
    m = '0%s' % m
if day == "*":
    day="Daily"
elif day == "1":
    day='Monday'
elif day == "2":
    day='Tuesday'    
elif day == "3":
    day='Wednesday'    
elif day == "4":
    day='Thursday' 
elif day == "5":
    day='Friday'
elif day == "6":
    day='Saturday' 
elif day == "7":
    day='Sunday'    
%>
				<u>Schedule #$schednum:</u> <strong>$h:$m</strong> &sdot; $day &sdot; $action
				
				&sdot;<input type="hidden" name="line" value="$line"/>
				<input type="submit" value="X"/>
				
			</form><br />
			<!--#end for#-->
			</fieldset>
			</div>
			
