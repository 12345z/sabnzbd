<!--#set global $pane="Connections"#-->
<!--#set global $help_uri="GUI+Connections"#-->
<!--#include $webdir + "/config_inc_header.tmpl"#-->

<div class="center" nowrap><small>
	$T('version'): $version &sdot; $T('uptime'): $uptime &sdot;
	<a href="showlog?session=$session">$T('link-showLog')</a> &sdot;
	<a href="showweb?session=$session">$T('link-showWeblog')</a> &sdot;
	$T('logging'): <select class="xsmall" id="logging_level">
		<option value="0" <!--#if $loglevel == "0" then "selected" else ""#-->>$T('log-errWarn')</option>
		<option value="1" <!--#if $loglevel == "1" then "selected" else ""#-->>$T('log-info')</option>
		<option value="2" <!--#if $loglevel == "2" then "selected" else ""#-->>$T('log-debug')</option>
	</select>
	<!--#if int($cache_max)#--> &sdot; <!--#set $msg=$T('ft-buffer@2')%($cache_art, $cache_size)#-->$msg<!--#end if#-->

	<br/><br/>
	<table width="100%">
		<tr>
			<td>$T('explain-Restart')</td>
			<td><!--#if $folders#-->$T('explain-orphans')<!--#end if#--></td>
			<td>$T('explain-Repair')</td>
		</tr>
		<tr>
			<td>
				<form action="saveGeneral" method="post">
					<input type="submit" onclick="this.form.action='../config/restart?session=$session'; this.form.submit(); return false;" value="$T('button-restart')"/>
				</form>
			</td><td><!--#if $folders#-->
				<table class="catTable">
					<tr>
						<th></th>
						<th></th>
						<th>$T('name')</th>
					</tr>
				<!--#set $odd = False#-->
				<!--#for $folder in $folders#-->
					<!--#set $odd = not $odd#-->
					<tr class="<!--#if $odd then "odd" else "even"#-->">
			
					<td>
						<form action="delete" method="get">
						<input type="hidden" value="$folder" name="name">
						<input type="hidden" value="$session" name="session">
						<input type="submit" value="$T('button-delCat')">
						</form>
					</td>
			
					<td>
						<form action="add" method="get">
						<input type="hidden" value="$folder" name="name">
						<input type="hidden" value="$session" name="session">
						<input type="submit" value="$T('button-add')">
						</form>
					</td>
			
					<td>
					$folder
					</td>
			
				<!--#end for#-->
				</table>
				<!--#end if#-->
			</td><td>
				<form action="saveGeneral" method="post">
					<input type="submit" onclick="this.form.action='../config/repair?session=$session'; this.form.submit(); return false;" value="$T('button-repair')"/>
				</form>
			</td>
		</tr>
	</table>

</small></div>





<!--#if $servers#-->
	<!--#for $server in $servers#-->
	<fieldset class="EntryFieldSet">
		<legend class="server<!--#if int($server[7]) != 0#-->Backup<!--#else if int($server[8]) != 0#-->Optional<!--#else#-->Enabled<!--#end if#-->">
			<span class="config_sprite_container <!--#if int($server[4])#-->sprite_config_connections_encrypted<!--#else#-->sprite_config_connections_unencrypted<!--#end if#-->">&nbsp;</span>
			$server[0]:$server[1]:$server[2]
        <!--#if not $server[5]#-->
            <a href="./unblock_server?server=$server[0]:$server[1]&session=$session">($T('server-blocked'))</a>
            &nbsp;&nbsp;$server[6]
        <!--#end if#-->
		</legend>
		<small><!--#if $server[3]#--><ol class="numbered_list">
		<!--#for $thrd in $server[3]#-->
			<li>&rArr; $thrd[1]<br/>&rArr; $thrd[2]<br/>&rArr; $thrd[3]</li>
		<!--#end for#-->
		</ol><!--#else#-->$T('none')<!--#end if#--></small>
	</fieldset>
    <!--#end for#-->
<!--#end if#-->

<!--#if $lastmail#-->
	<fieldset class="EntryFieldSet">
		<legend class="lastEmail"><span class="config_sprite_container sprite_config_email_account_settings">&nbsp;</span> $T('emailResult')</legend>
		<small>$lastmail</small>
	</fieldset>
<!--#end if#-->

<!--#if $warnings#-->
	<fieldset class="EntryFieldSet">
		<legend class="latestWarnings" id="configbox_latest_warnings">
			<span class="config_sprite_container sprite_config_connections_warnings">&nbsp;</span>
			$T('lastWarnings') <small>(<a href="clearwarnings?session=$session">$T('clearWarnings')</a>)</small>
		</legend>
		<small><ol class="numbered_list">
		<!--#for $warn in $warnings#-->
			<li><pre>$warn</pre></li>
		<!--#end for#-->
		</ol></small>
	</fieldset>
<!--#end if#-->

<!--#include $webdir + "/config_inc_footer.tmpl"#-->
